<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PaletteActivity"
    android:background="#ffbb98"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/sourceImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:onClick="chooseImage"
            android:contentDescription="Choose image"
            android:src="@android:drawable/dark_header"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:id="@+id/palette_container"
            android:gravity="center">
            <View
                android:id="@+id/color_one"
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>

            <View
                android:id="@+id/color_two"
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>

            <View
                android:id="@+id/color_three"
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>

            <View
                android:id="@+id/color_four"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

            <View
                android:id="@+id/color_five"
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>

        </LinearLayout>

        <Button
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paletize"
            android:background="#ff78"
            android:textColor="#ffffff"
            android:onClick="extractPalette"/>
    </LinearLayout>


</RelativeLayout>
