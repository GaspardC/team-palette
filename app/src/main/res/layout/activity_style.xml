<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StyleActivity"
    android:focusableInTouchMode="true"
    android:paddingBottom="15dp"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SearchView
            android:focusableInTouchMode="false"
            android:id="@+id/searchView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <ListView
            android:padding="5dp"
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:id="@+id/palSelected_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="palette selected : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:id="@+id/palName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView

                    android:layout_marginLeft="50dp"
                    android:id="@+id/color1Selected"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    />
                <ImageView

                    android:layout_marginLeft="10dp"
                    android:id="@+id/color2Selected"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    />
                <ImageView

                    android:layout_marginLeft="10dp"
                    android:id="@+id/color3Selected"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    />
                <ImageView

                    android:layout_marginLeft="10dp"
                    android:id="@+id/color4Selected"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    />
                <ImageView

                    android:layout_marginLeft="10dp"
                    android:id="@+id/color5Selected"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_150sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/original_mountain"
            android:id="@+id/imageStyleActivity"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Click on the image to chose another one" />
    </LinearLayout>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f278"
        android:textColor="#ffffff"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Apply this Palette"
        android:enabled="false"
        />

</RelativeLayout>
