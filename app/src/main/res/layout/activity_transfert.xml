<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorYellow"
    tools:context=".fastTranfer.TransferActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="3dp">
        <ImageView
            android:tag="source"
            android:id="@+id/transfertSourceImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/soleil"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:onClick="addPhotoByCamLeftFt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/camera_icon"/>
            <ImageView
                android:tint="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:onClick="addPhotoByLibLeftFt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/library_icon"/>
        </LinearLayout>

    </LinearLayout>
        <ImageView
            android:visibility="gone"
            android:id="@+id/arrow_tranfert"
            android:tint="@color/colorPrimary"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_icon"/>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:visibility="gone"
          android:id="@+id/ll_container_img_right">
          <ImageView
            android:layout_marginLeft="10dp"
            android:tag="target"
            android:id="@+id/transfertTargetImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mer"
            android:layout_marginBottom="3dp"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal">
              <ImageView
                  android:onClick="addPhotoByCamRightFt"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:tint="@color/colorPrimary"
                  android:src="@drawable/camera_icon"/>
              <ImageView
                  android:tint="@color/colorPrimary"
                  android:layout_marginLeft="20dp"
                  android:onClick="addPhotoByLibRightFt"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:src="@drawable/library_icon"/>
          </LinearLayout>
          </LinearLayout>
    </LinearLayout>

        <com.epfl.computational_photography.paletizer.fastTranfer.MySurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_above="@+id/computeTransfertFast"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            />
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/computeTransfertFast"
            android:layout_marginTop="15dp"
            android:id="@+id/transfertImageResult"
            android:onClick="goFullScreen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:layout_gravity="center"
            />
        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/computeTransfertFast"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="compute"
            android:background="#ff78"
            android:textColor="#ffffff"
            android:onClick="computeTransfert"/>
    </RelativeLayout>


</RelativeLayout>
